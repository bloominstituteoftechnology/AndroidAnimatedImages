<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AnimatedVectorFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clav">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animated vector"
            android:id="@+id/tv_av"
            app:layout_constraintLeft_toLeftOf="@+id/clav"
            app:layout_constraintTop_toTopOf="@+id/clav"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/iv_av"
            app:layout_constraintTop_toBottomOf="@+id/tv_av"
            app:layout_constraintLeft_toLeftOf="@+id/clav"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>