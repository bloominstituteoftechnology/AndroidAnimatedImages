<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:text="GIF VIEWER"
              android:textAlignment="center"
              android:textSize="40dp"
              android:background="@android:color/holo_orange_light"
              app:layout_constraintBottom_toTopOf="@id/animated_image_view"/>

    <ImageView
            android:id="@+id/animated_image_view"
            android:src="@drawable/android_dance"
            android:layout_width="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@id/button_play"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:src="@android:drawable/ic_media_previous"
            android:id="@+id/button_previous_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/holo_orange_light"
            app:layout_constraintTop_toBottomOf="@id/animated_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_play"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:src="@android:drawable/ic_media_play"
            android:id="@+id/button_play"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/holo_orange_light"
            app:layout_constraintStart_toEndOf="@id/button_previous_image"
            app:layout_constraintEnd_toStartOf="@id/button_next_image"
            app:layout_constraintTop_toBottomOf="@id/animated_image_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:src="@android:drawable/ic_media_next"
            android:id="@+id/button_next_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/holo_orange_light"
            app:layout_constraintTop_toBottomOf="@id/animated_image_view"
            app:layout_constraintStart_toEndOf="@id/button_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>